<configuration>

    <conversionRule conversionWord="custom_color" converterClass="cn.sf.w2.quartz.test.logback.W2LogbackColor" />

    <appender name="colorAppender" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d %green([%thread]) %highlight(%level) %logger{50} - %msg%n</pattern>
        </layout>
    </appender>

    <appender name="DEFAULT_STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout  class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d %green([%thread]) %custom_color(%level) %boldCyan(%logger{50}) - %custom_color(%msg%n)</pattern>
        </layout>
    </appender>


    <!--按天生成日志-->
    <appender name="LOGFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <Prudent>true</Prudent>
        <!--滚动策略按照时间以及日志文件大小滚动-->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <FileNamePattern>
                logs/w2/%d{yyyy-MM-dd}/%d{yyyy-MM-dd}-%i.log
            </FileNamePattern>
            <!--日志文件保留天数-->
            <maxHistory>90</maxHistory>
            <!--每个文件最大大小-->
            <maxFileSize>10MB</maxFileSize>
            <!--所有的日志文件最大10G，超过就会删除旧的日志-->
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                %d{yyyy-MM-dd HH:mm:ss} [ %thread ] - [ %-5level ] [ %logger{50} : %line ] - %msg%n
            </Pattern>
        </layout>
    </appender>

    <logger name="org.springframework" level="INFO" additivity="false">
        <appender-ref ref="DEFAULT_STDOUT" />
<!--        <appender-ref ref="LOGFILE" />-->
    </logger>

    <logger name="cn.sf" level="TRACE" additivity="false">
        <appender-ref ref="DEFAULT_STDOUT" />
<!--        <appender-ref ref="LOGFILE" />-->
    </logger>

    <root level="INFO">
        <appender-ref ref="DEFAULT_STDOUT" />
<!--        <appender-ref ref="LOGFILE" />-->
    </root>
</configuration>